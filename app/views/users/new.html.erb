<%= form_for @user do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email, :value => 'user@domain.com' %>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
